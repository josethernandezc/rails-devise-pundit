<h3>User</h3>
<p>Name: <%= @user.name if @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>
<h4>Labels</h4>
<%= form_for @user, url: update_labels_user_path(@user) do |f| %>
  <p>
    <%= f.collection_select :label_ids, Label.all, :id, :name, {}, { multiple: true } %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<p><%= link_to 'Back', users_path %></p>
